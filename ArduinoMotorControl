//Anndrea okt.2017
#include <Wire.h>
#include <Adafruit_MotorShield.h>
#include "utility/Adafruit_MS_PWMServoDriver.h"

Adafruit_MotorShield AFMS = Adafruit_MotorShield(); 

Adafruit_DCMotor *myMotor1 = AFMS.getMotor(1);
Adafruit_DCMotor *myMotor2 = AFMS.getMotor(2);
Adafruit_DCMotor *myMotor3 = AFMS.getMotor(3);
Adafruit_DCMotor *myMotor4= AFMS.getMotor(4);

void setup() {
  Serial.begin(9600);
  Serial.setTimeout(20);
  Serial.println("*Car ready");
  AFMS.begin();

  myMotor1->run(RELEASE);
    myMotor2->run(RELEASE);
    myMotor3->run(RELEASE);
      myMotor4->run(RELEASE);
}

void forwards()
{
  myMotor1->setSpeed(200);
  myMotor1->run(FORWARD);

  myMotor2->setSpeed(200);
  myMotor2->run(FORWARD);

  myMotor3->setSpeed(200);
  myMotor3->run(FORWARD);

  myMotor4->setSpeed(200);
  myMotor4->run(FORWARD);
}

void left()
{
  myMotor1->setSpeed(50);
  myMotor1->run(FORWARD);

   myMotor2->setSpeed(50);
  myMotor2->run(FORWARD);

   myMotor3->setSpeed(200);
  myMotor3->run(FORWARD);
  
   myMotor4->setSpeed(200);
  myMotor4->run(FORWARD);
}

void right()
{
  myMotor1->setSpeed(200);
  myMotor1->run(FORWARD);

   myMotor2->setSpeed(200);
  myMotor2->run(FORWARD);

   myMotor3->setSpeed(50);
  myMotor3->run(FORWARD);

   myMotor4->setSpeed(50);
  myMotor4->run(FORWARD);
}

void backwards()
{
  myMotor1->setSpeed(100);
  myMotor1->run(BACKWARD);

   myMotor2->setSpeed(100);
  myMotor2->run(BACKWARD);

   myMotor3->setSpeed(100);
  myMotor3->run(BACKWARD);

   myMotor4->setSpeed(100);
  myMotor4->run(BACKWARD);
}
void stop()
{
  myMotor1->setSpeed(0);
  myMotor1->run(BACKWARD);

   myMotor2->setSpeed(0);
  myMotor2->run(BACKWARD);

   myMotor3->setSpeed(0);
  myMotor3->run(BACKWARD);

   myMotor4->setSpeed(0);
  myMotor4->run(BACKWARD);
}

void loop() { // run over and over
if(Serial.available()){
String command = Serial.readString();
{ 

  Serial.println(command);
  if(command.equalsIgnoreCase("forwards"))
  {
    forwards();
    Serial.flush();
  }
  else if(command.equalsIgnoreCase("backwards"))
  {
    backwards();
    Serial.flush();
  }
    else if(command.equalsIgnoreCase("stop"))
  {
    stop();
    Serial.flush();
  }
  else if(command.equalsIgnoreCase("left"))
  {
    left();
    Serial.flush();
   }
    else if(command.equalsIgnoreCase("right"))
  {
    right();
    Serial.flush();
   }
  }
 }
}

  
